        .bowl-font { font-family: 'Bowlby One SC', cursive !important; }
        .inter-font { font-family: 'Inter', sans-serif; }
        .responsive-grid { display: flex; flex-direction: column; gap: 40px; }
        @media (min-width: 768px) {
          .responsive-grid { flex-direction: row; justify-content: space-between; gap: 30px; }
          .responsive-grid > div { flex: 1; }
        }
        .fixed-header-wrapper { position: fixed; top: 0; left: 0; width: 100%; height: 0px; z-index: 9999; pointer-events: none; }
        .header-content-inner { pointer-events: auto; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
