              <h3 className="bowl-font text-xl mb-2 uppercase text-white">Custom</h3>
              <p className="bowl-font text-3xl text-white mb-6">Talk</p>
              <p className="text-[11px] text-gray-500 mb-10 leading-relaxed">For organizations needing specialized AI agents.</p>
              <button onClick={() => scrollToSection('contact-section')} className="w-full py-3 rounded-xl border border-white/10 bowl-font text-[10px] uppercase hover:border-white transition-all">Contact Us</button>
            </motion.div>
          </motion.div>
        </section>

        {/* --- 8. 가입 섹션 --- */}
        <motion.section {...fadeInUp} id="contact-section" className="py-32 border-t border-white/5">
          <div className="max-w-xs mx-auto">
            <h2 className="bowl-font text-[28px] mb-10 uppercase text-white">Join Muntalk</h2>
            <div className="min-h-[160px] flex items-center justify-center">
