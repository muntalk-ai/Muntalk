"use client";

import { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';

// --- 1. 애니메이션 및 데이터 설정 ---
const fadeInUp = {
  initial: { opacity: 0, y: 30 },
  whileInView: { opacity: 1, y: 0 },
  viewport: { once: true, margin: "-100px" },
  transition: { duration: 0.6, ease: "easeOut" }
};

const CHAT_MESSAGES = [
  { role: "ai", text: "Bonjour! Ready for our 5-minute French practice?" },
  { role: "user", text: "Oui! I want to practice ordering coffee." },
  { role: "ai", text: "Perfect. 'Je voudrais 한 잔의 커피...' How do you say 'a cup of coffee'?" },
  { role: "user", text: "un café?" },
  { role: "ai", text: "Exactly! 'un café, s'il vous plaît.' You're doing great! ☕" },
];

export default function MuntalkHome() {
  const [userInput, setUserInput] = useState("");
  const [isLoading, setIsLoading] = useState(false);
  const [visibleMessages, setVisibleMessages] = useState<typeof CHAT_MESSAGES>([]);

  useEffect(() => {
    let index = 0;
    const interval = setInterval(() => {
      if (index < CHAT_MESSAGES.length) {
        const nextMsg = CHAT_MESSAGES[index];
        if (nextMsg) {
          setVisibleMessages((prev) => [...prev, nextMsg]);
          index++;
        }
      } else {
        setTimeout(() => {
          setVisibleMessages([]);
          index = 0;
        }, 3000);
      }
    }, 2000);
    return () => clearInterval(interval);
  }, []);

  const handleSubscribe = (e: React.FormEvent) => {
    e.preventDefault();
    if (email) setIsSubmitted(true);
  };

  const scrollToSection = (id: string) => {
    const element = document.getElementById(id);
    if (element) {
      const headerOffset = 80;
      const elementPosition = element.getBoundingClientRect().top;
      const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
      window.scrollTo({ top: offsetPosition, behavior: 'smooth' });
    }
