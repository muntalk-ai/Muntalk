              <div className="w-10 h-10 rounded-lg flex items-center justify-center mb-4" style={{ backgroundColor: `${feat.color}20`, color: feat.color }}>
                <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d={feat.icon} /></svg>
              </div>
              <h3 className="bowl-font text-[14px] mb-2 uppercase text-white">{feat.title}</h3>
              <p className="text-gray-500 text-[11px] leading-relaxed">{feat.desc}</p>
