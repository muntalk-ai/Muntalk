            {...fadeInUp}
            className="flex-1 relative w-full border border-white/10 rounded-[40px] overflow-hidden bg-[#111111]/80 backdrop-blur-sm z-2 shadow-2xl"
          >
            {/* 이미지 경로를 실제 파일명으로 수정하세요 */}
            <img 
              src="/mainrobot.jpg" 
              className="w-full h-[350px] md:h-[500px] object-cover opacity-90" 
              alt="Muntalk Hero" 
            />
