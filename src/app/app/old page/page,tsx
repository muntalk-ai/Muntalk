            </motion.div>

            <motion.div variants={fadeInUp} className="bg-[#161b22] p-8 rounded-[32px] border-2 border-[#f0c3ff] relative transform md:-translate-y-4 shadow-2xl flex flex-col items-center">
              <span className="absolute -top-4 bg-[#f0c3ff] text-black bowl-font text-[9px] px-4 py-1 rounded-full uppercase">Most Popular</span>
              <h3 className="bowl-font text-xl mb-2 uppercase text-white">Pro Learner</h3>
              <p className="bowl-font text-4xl text-[#f0c3ff] mb-6">$19</p>
              <ul className="text-[12px] text-gray-200 space-y-3 mb-10 text-left w-full font-bold"><li>★ Unlimited Conversations</li><li>★ Accent Correction</li><li>★ Priority Access</li></ul>
              <button className="w-full py-3 rounded-xl bg-[#f0c3ff] text-black bowl-font text-[10px] uppercase hover:scale-105 transition-transform">Join Pro</button>
