        <div className="absolute top-[20%] -right-[5%] w-[40%] h-[40%] bg-[#f0c3ff]/5 blur-[100px] rounded-full" />
        <div className="absolute -bottom-[10%] left-1/2 -translate-x-1/2 w-[60%] h-[40%] bg-[#e5ff4d]/5 blur-[150px] rounded-full" />
